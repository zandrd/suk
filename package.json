{
	"name": "@zandrd/suk",
	"version": "0.1.1",
	"description": "The Svelte UI Kit that doesn't suck. CLI-based component distribution for Svelte 5 with perfect tree-shaking and zero bundle overhead.",
	"author": "AndrÃ©s Mardones",
	"license": "MIT",
	"bin": {
		"suk": "./dist/index.js"
	},
	"scripts": {
		"dev": "vite dev",
		"dev:cli": "tsx src/cli/index.ts",
		"build": "npm run build:cli && npm run build:site",
		"build:cli": "tsup src/cli/index.ts --format esm --dts --out-dir dist",
		"build:site": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "vitest"
	},
	"files": [
		"dist",
		"registry",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"sideEffects": false,
	"dependencies": {
		"commander": "^12.0.0",
		"chalk": "^5.3.0",
		"ora": "^8.0.1",
		"prompts": "^2.4.2",
		"execa": "^8.0.1",
		"fs-extra": "^11.2.0"
	},
	"type": "module",
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^20.0.0",
		"@types/prompts": "^2.4.9",
		"@vitest/browser": "^3.2.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"tsup": "^8.0.1",
		"tsx": "^4.7.1",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"keywords": [
		"svelte",
		"svelte5",
		"ui",
		"components",
		"cli",
		"design-system",
		"typescript",
		"tailwindcss",
		"copy-paste",
		"tree-shaking",
		"bundle-optimization",
		"component-library",
		"sveltekit",
		"runes",
		"pnpm"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
